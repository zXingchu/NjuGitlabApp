<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context="com.example.xingchuzhang.njugitlabapp.tearcharUI.TeacherHomeActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yoooo "
        android:textSize="32sp"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="liuqin"
        android:textSize="32sp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/stuStatisticBtn"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="统计"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="stuStatistic"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/userNameText" />

    <Button
        android:id="@+id/stuHomeworkBtn"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="作业"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stuStatisticBtn"
        android:onClick="stuHomework" />

    <Button
        android:id="@+id/stuExerciseBtn"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="练习"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stuHomeworkBtn"
        android:onClick="stuExercise" />

    <Button
        android:id="@+id/stuExamBtn"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="测验"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stuExerciseBtn"
        android:onClick="stuExam" />

    <Button
        android:id="@+id/readmeBtn"
        android:padding="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="README"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stuExamBtn"
        android:onClick="startReadMe" />

</android.support.constraint.ConstraintLayout>
