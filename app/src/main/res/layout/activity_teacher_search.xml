<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xingchuzhang.njugitlabapp.tearcharUI.TeacherSearchActivity">

    <TextView
        android:id="@+id/assignIdLabel"
        android:text="Assignment ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/assignIdEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/assignIdEdit" />

    <EditText
        android:id="@+id/assignIdEdit"
        android:hint="请输入Assignment ID"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/assignIdLabel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="59dp"
        app:layout_constraintHorizontal_bias="0.553" />

    <TextView
        android:id="@+id/stuIdLabel"
        android:text="Student ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/stuIdEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stuIdEdit"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/stuIdEdit"
        android:hint="请输入Student ID"
        android:inputType="text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/stuIdLabel"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintTop_toBottomOf="@+id/assignIdEdit" />

    <Button
        android:id="@+id/searchTest"
        android:text="Search"
        android:textSize="32dp"
        android:onClick="searchTestCase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="102dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/stuIdEdit"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>
